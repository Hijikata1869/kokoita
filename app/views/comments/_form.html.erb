<div class="comment-form mt-4 mb-2 mb-md-5">
  <%= form_for([@post, @comment]) do |f| %>
    <%= f.text_area :content, class: 'form-control', :placeholder => 'コメントを入力' %>
    <div class="text-right">
      <%= f.submit 'コメントする', class: 'btn btn-sm btn-success mt-lg-2 mt-md-3' %>
    </div>
  <% end %>
</div>