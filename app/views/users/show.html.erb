<%= provide(:title, @user.nickname) %>
<div class="pt-5 users-show">
  <div class="container pt-5">
    <h2><%= @user.nickname %></h2>
    <% if @user.picture? %>
      <%= image_tag @user.picture.thumb.url %>
    <% else %>
      <%= image_tag 'noimage.png' %>
    <% end %><br>
    <% if current_user.id == @user.id %>
      <%= link_to "登録情報の更新", edit_user_registration_path, class: "btn btn-outline-success mt-2 mb-5" %>
    <% end %>
    <% if @user.posts.any? %>
      <h3><%= @user.nickname %>の投稿</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end%>
  </div>
</div>