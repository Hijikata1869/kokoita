<div class="following pt-5">
  <div class="container pt-5">
    <h2 class="mb-md-4">フォロー中のユーザ</h2>
    <div class="following-user">
      <% @users.each do |user| %>
        <%= user.nickname %>
        <% if user.picture? %>
          <%= image_tag user.picture.thumb.url, class: 'user-picture' %>
        <% else %>
          <%= image_tag 'noimage.png' %>
        <% end %>
        <% if current_user != @user %>
          <% if user.followed_by?(current_user) %>
            <p><%= link_to "フォロー解除", user_relationships_path(user.id), class: "btn btn-success mt-md-2 ml-md-4", method: :delete %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success mt-md-2 ml-md-4", method: :post %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>