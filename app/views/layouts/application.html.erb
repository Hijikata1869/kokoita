<!DOCTYPE html>
<html>
  <head>
    <title><%=  full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= render 'layouts/shim' %>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Kosugi+Maru&family=Noto+Sans+JP:wght@900&display=swap" rel="stylesheet">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@Liv04262248" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.kokoita.net/" />
    <meta property="og:title" content="Kokoita" />
    <meta property="og:description" content="あなたが出会った生き物の「ここにいた」をみんなに伝えよう！" />
    <meta property="og:image" content="<%= asset_url('forest5.jpg') %>" />
    <meta name="twitter:image" content="<%= asset_url('forest5.jpg') %>" />
    <meta property="fb:app_id" content="732740227644268" />
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render 'layouts/login_user_header' %>
    <% else %>
      <%= render 'layouts/no_login_user_header' %>
    <% end %>
    <%= render 'layouts/flash' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>

</html>